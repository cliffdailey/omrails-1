<div class="avatar">
	<%= image_tag avatar_url(current_user, 120) %>
</div>
<div class="user-info">
	<h2><%= current_user.name %></h2>
	<p><%= current_user.email %></p>
</div>
<div id="pins">
	<% unless current_user.likes.blank? %>
		<% @pins.each do |pin| %>
			<div class="box">
				<%= link_to (image_tag pin.image(:medium)), "#myModal#{pin.id}", "data-toggle" => "modal" %>
				<p class="description">
					<%= pin.description %>
				</p>
				<p>
					<strong>
						by <%= link_to "#{pin.user.name}", user_path(pin.user) %>
					</strong>
				</p>	
				<p><%= link_to (pluralize(pin.comments.count, 'comment')), pin %></p>
				<p><%= pluralize(pin.likes.count, 'like') %></p>			
			</div>
			<!-- Modal -->
			<div id="myModal<%= pin.id %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

			    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>

			  <div class="modal-body">
			    <%= image_tag pin.image(:large) %>
			    <p><%= pin.description %></p>    
			    <span class="small"><%= link_to "Show Full Size", pin %></span>    
			  </div>
			  <div class="modal-footer">
			    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
			  </div>
			</div>
		<% end %>
	<% else %>
	<div><p>Nothing liked yet.</p></div>
	<% end %>
</div>