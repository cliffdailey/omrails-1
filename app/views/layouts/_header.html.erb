<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
 
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
 
      <!-- Website Logo/Brand -->
      <%= link_to root_path, class: "brand" do %>
        quick<span>PINS</span>
      <% end %>
 
      <!-- Collapsible Navigation Elements -->
      <div class="nav-collapse collapse">
		    <ul class="nav pull-right">
          <% unless user_signed_in? %>   
            <li>         
  		        <button class="btn btn-header" data-toggle="modal" href="#loginModal">
                Login                
              </button>              
            </li>
          <% else %>
            <li>
              <%= link_to new_pin_path do %>
                New Pin
                <img class="plus-brown" src="/assets/plus-brown.png" alt="Add Pin" />                
              <% end %>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.username %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
                <li><%= link_to "My Pins", user_path(current_user) %>
                <li><%= link_to "My Likes", likes_path %>
              </ul>
            </li>
            <li>
              <button class="btn btn-header logoutButton">
                <%= link_to 'Logout', destroy_user_session_path, :method => 'delete', :class => 'logoutLink' %>
              </button>
            </li>            
          <% end %>
		    </ul> 
      </div><!-- End nav-collapse -->
      
    </div><!-- End container -->
  </div><!-- End navbar inner -->
</div><!-- End navbar -->

